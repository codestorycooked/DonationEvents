@model IEnumerable<DonationEvents.Event>

@{
    ViewBag.Title = "Upcoming Events";
}

<h2>Events</h2>

@if (Model.Count() == 0)
{
    <h4>Currently there are no Events.</h4>
}
else
{
    <table class="table table-responsive">
        <tr>
            <th>
               Event
            </th>
            <th>
                Description
            </th>


            <th></th>
        </tr>

        @foreach (var item in Model)
        {
            <tr>
                <td>
                    @Html.DisplayFor(modelItem => item.EventName)
                </td>
                <td style="height:50px; width:70%; text-align:justify; overflow:auto">
                    @Html.DisplayFor(modelItem => item.EventDescription)
                 
                </td>


                <td style="width:100px">

                    @Html.ActionLink("View Video", "Details", new { id = item.Id }) <br />

                    @Html.ActionLink("Donate Now", "Donate", new { id = item.Id })
                </td>
            </tr>
        }

    </table>
}
