@model IEnumerable<DonationEvents.Event>

@{
    ViewBag.Title = "Upcoming Events";
}

<h2>Events</h2>

@if (Model.Count() == 0)
{
  <h4>Currently there are no Events.</h4>
}
else
{
  <table class="table">
    <tr>
      <th>
        @Html.DisplayNameFor(model => model.EventName)
      </th>
      <th>
        @Html.DisplayNameFor(model => model.EventDescription)
      </th>


      <th></th>
    </tr>

    @foreach (var item in Model)
    {
      <tr>
        <td>
          @Html.DisplayFor(modelItem => item.EventName)
        </td>
        <td>
          @Html.DisplayFor(modelItem => item.EventDescription)
        </td>


        <td>

          @Html.ActionLink("View", "Details", new { id = item.Id }) |

          @Html.ActionLink("Donate", "Donate", new { id = item.Id })
        </td>
      </tr>
    }

  </table>
}
